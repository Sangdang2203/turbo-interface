{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "src/",
		"paths": {
			"@/*": ["*"],
			"@/styles/*": ["styles/*"],
			"@/components/*": ["components/*"],
			"@/hooks/*": ["hooks/*"],
			"@methods/*": ["app/methods/*"],
			"@/helper/*": ["helper/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/types/script.js"
	],
	"exclude": ["node_modules"]
}
